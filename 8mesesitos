<body onclick="changeVibe()">
  <div class="container">
  <img id="vibeImage" src="1.jpeg" alt="vibe image" />
  <h1 id="phrase">FELICES 8 MESESITOOOS AMOR <3 </h1>
</div>


<script>
  const phrases = [
    "Te amo mas de lo que pienso\n\n mi bebe preciosa\nestoy dispuesta a lo que necesites\nsoy toda tuya\nmi amor",
    "Te convertiste en la persona que quiero tener a mi lado para toda la vida",
    "Ya 8 mesesitos tan rapido que pasa el tiempo",
    "¬¥Despu√©s de todo, me alegro estar junto a ti¬¥",
    "Espero que los momentos junto a ti sean inolvidables para ambas.",
    "¬°Ay, amorcito! es enserio: ¬°TE ADORO DEMASIADO! ü§ç",
    "Quedate a mi lado siempre, si?",
    "Eres mi 11:11 de toda la vida, un deseo que no quiero que se acabe"
  ];

  const images = [
    "1.JPG",
    "2.jpeg",
    "3.jpeg",
    "4.jpeg",
    "5.jpeg",
    "6.jpg",
    "7.JPG",
    "8.jpeg"

  ];

  const phraseEl = document.getElementById("phrase");
  const imageEl = document.getElementById("vibeImage");

  // ESTADO INICIAL EST√Å MOSTRANDO EL TEXTO
  let showing = "text";
  imageEl.style.display = "none";

  function changeVibe() {
    if (showing === "text") {
      // ocultar el texto
      phraseEl.style.display = "none";

      // mostrar imagen
      imageEl.src = images[Math.floor(Math.random() * images.length)];
      imageEl.style.display = "block";

      showing = "image";
    } else {
      // ocultar imagen
      imageEl.style.display = "none";

      // mostrar texto
      phraseEl.textContent =
        phrases[Math.floor(Math.random() * phrases.length)];
      phraseEl.style.display = "block";

      showing = "text";
    }
  }
</script>
